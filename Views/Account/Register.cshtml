@model User

@{
    ViewData["Title"] = "Registro";
}
@if (ViewBag.Message != null)
{
    <div class="p-1 mb-2 bg-success text-white">@ViewBag.Message</div>
}
<section class="container-fluid padrao register-section d-flex align-items-center justify-content-center">
    <h4 class="titulo-form">Crie uma conta</h4>
    <form asp-action="Register" id="form-registro" class="form-auth">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-1">
            <label asp-for="NomeCompleto" class="form-label">Nome completo</label>
            <input asp-for="NomeCompleto" class="form-control" placeholder="Digite seu nome completo">
            <span asp-validation-for="NomeCompleto" class="text-danger"></span>
        </div>

        <div class="mb-1">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Digite seu email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Senha</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Digite sua senha">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Confirmar Senha</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirme sua senha">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Cpf" class="form-label"></label>
            <input asp-for="Cpf" class="form-control" placeholder="Digite seu CPF">
            <span asp-validation-for="Cpf" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Telefone" class="form-label"></label>
            <input asp-for="Telefone" class="form-control" placeholder="Digite seu telefone">
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DataNascimento" class="form-label">Data de Nascimento</label>
            <input asp-for="DataNascimento" class="form-control" placeholder="Digite sua data de nascimento">
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-estilo w-100">Cadastrar</button>

        <div class="mb-3 crie-uma-conta d-flex mt-3">
            <p class="text-muted">Já tem uma conta?</p>
            <a class="voltar-login-link" asp-controller="Account" asp-action="Login">Voltar para o login</a>
        </div>
    </form>
</section>
